<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/txtCambiaFermata"
        android:layout_width="430px"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textColor="#191970"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnEliminaFermataModificaLinea"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/elimina"
        android:paddingRight="5dp" />

    <AutoCompleteTextView
        android:id="@+id/actModificaFermata"
        android:background="@drawable/edit"
        android:layout_width="430px"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#191970"
        android:textSize="25sp"
        android:visibility="gone" >

        <requestFocus />
    </AutoCompleteTextView>    

    <Button
        android:id="@+id/btnModificaFermataInModificaLinea"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ok"
        android:visibility="gone" />

</LinearLayout>

