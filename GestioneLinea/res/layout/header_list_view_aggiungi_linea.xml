<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomeLinea"
            android:textColor="#191970"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtNomeLinea"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:background="@drawable/edit"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/codiceLinea"
            android:textColor="#191970"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtCodiceLinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/edit"
            android:ems="10" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:text="Orario"
        android:textColor="#191970"
        android:textSize="32sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnInserisciOrari"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:layout_marginLeft="261dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/orario"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#191970" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="30dp"
        android:text="Fermate"
        android:textColor="#191970"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="27dp"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnNuovaFermata"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/add" />

        <Button
            android:id="@+id/btnEliminaFermata"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/elimina" />

        <Button
            android:id="@+id/btnConfermaLinea"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="35dp"
            android:layout_weight=".33"
            android:background="@drawable/ok" />
    </LinearLayout>

</LinearLayout>
